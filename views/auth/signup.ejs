<div class="m-0 pt-5 w-100 bg-img-2 position-relative">
	<form action="/auth/signup" method="POST" class="w-75 bg-white opacity-75 p-5 position-absolute top-50 start-50 translate-middle" style="min-width: 320px;">
		<h3 class="text-center mb-3 ">User Signup</h3>

		<% if(typeof errors != 'undefined') { %>
			<% errors.forEach(function(error) { %>
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= error.msg %>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% }); %>
		<% } %> 

		<!-- class="d-flex flex-row flex-wrap bg-success gap-10  -->
		
		<div class="row">
			<div class=" w-50">
				<label for="first-name" class="form-label">First name</label>
				<input type="text" name="firstName" class="form-control" id="first-name" placeholder="Enter first name.." value="<%= typeof firstName != 'undefined' ? firstName : '' %>" required autofocus>
			</div>
			
			<div class="mb-3 w-50">
				<label for="last-name" class="form-label">Last name</label>
				<input type="text" name="lastName" class="form-control" id="last-name" placeholder="Enter last name.." value="<%= typeof lastName != 'undefined' ? lastName : '' %>" required>
			</div>
		
			<div class="mb-3 w-50">
				<label for="email" class="form-label">Email address</label>
				<input type="email" name="email" class="form-control" id="email" placeholder="Enter email.." value="<%= typeof email != 'undefined' ? email : '' %>" required>
				<div class="form-text">We'll never share your email with anyone else.</div>
			</div>

			<!-- <div class="mb-3 w-50">
				<label for="role" class="form-label">Signup as</label>
				<select class="form-select" name="role" id="role">
					<option value="donor">Donor</option>
					<option value="agent">NGO</option>
					
				</select>
			</div> -->

			<div class="mb-3 w-50 d-flex row">
				<label class="d-inline-block me-2">Signup as</label>
				<div class="form-check form-check-inline ">
					<input class="form-check-input" type="radio" name="role" id="donor" value="donor">
					<label class="form-check-label" for="donor">Donor</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="role" id="ngo" value="agent">
					<label class="form-check-label" for="ngo">NGO</label>
				</div>
			</div>
			
			
			<div class="mb-3 w-50">
				<label for="password1" class="form-label">Password</label>
				<input type="password" name="password1" class="form-control" id="password1" placeholder="Enter password.." value="<%= typeof password1 != 'undefined' ? password1 : '' %>" required>
			</div>
	
			<div class="mb-3 w-50 ">
				<label for="password2" class="form-label">Confirm Password</label>
				<input type="password" name="password2" class="form-control" id="password2" placeholder="Re-enter password.." value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
			</div>
			
			
	
		
		<button type="submit" class="btn d-block w-100 m-auto mt-4">Submit</button>
		
	</div>
		<div class="mt-3">
			<span>Already have an account?</span>
			<a href="/auth/login">Login here</a>
		</div>
	
	</form>
</div>